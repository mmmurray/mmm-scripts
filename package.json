{
  "name": "mmm-scripts",
  "version": "0.0.0-semantically-released",
  "description": "An opinionated tool for building personal projects.",
  "author": "Mark Murray",
  "license": "MIT",
  "bin": {
    "mmm": "bin/mmm.js"
  },
  "scripts": {
    "build": "ts-node -P ./tsconfig.lib.json ./src build",
    "dev": "ts-node -P ./tsconfig.lib.json ./src dev",
    "jest": "ts-node -P ./tsconfig.lib.json ./src jest",
    "postinstall": "cd ./node_modules && ln -s .. ./mmm-scripts",
    "release": "ts-node -P ./tsconfig.lib.json ./src release",
    "test": "ts-node -P ./tsconfig.lib.json ./src test",
    "test:compile": "ts-node -P ./tsconfig.lib.json ./src test:compile",
    "test:coverage": "ts-node -P ./tsconfig.lib.json ./src test:coverage",
    "test:lint": "ts-node -P ./tsconfig.lib.json ./src test:lint"
  },
  "dependencies": {
    "@babel/core": "7.7.2",
    "@babel/plugin-proposal-class-properties": "7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "7.6.2",
    "@babel/preset-env": "7.7.1",
    "@babel/preset-react": "7.7.0",
    "@babel/preset-typescript": "7.7.2",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@hot-loader/react-dom": "16.11.0",
    "@testing-library/jest-dom": "4.2.3",
    "@types/jest": "24.0.22",
    "@types/node": "12.12.6",
    "@typescript-eslint/eslint-plugin": "2.6.1",
    "@typescript-eslint/parser": "2.6.1",
    "babel-jest": "24.9.0",
    "chalk": "2.4.2",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.5.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.16.0",
    "fs-extra": "8.1.0",
    "glob": "7.1.6",
    "glob-promise": "3.4.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "jest-watch-typeahead": "0.4.0",
    "prettier": "1.18.2",
    "react-hot-loader": "4.12.16",
    "semantic-release": "15.13.30",
    "start-server-webpack-plugin": "2.2.5",
    "ts-node": "8.4.1",
    "typescript": "3.7.2",
    "webpack": "4.41.2",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-dev-server": "3.9.0",
    "yargs-parser": "16.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "8.0.1",
    "@types/html-webpack-plugin": "3.2.1",
    "@types/webpack": "4.39.8",
    "@types/webpack-bundle-analyzer": "2.13.3",
    "@types/webpack-dev-server": "3.4.0"
  }
}
