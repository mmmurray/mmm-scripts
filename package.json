{
  "name": "mmm-scripts",
  "version": "0.0.0-semantically-released",
  "description": "An opinionated tool for building personal projects.",
  "author": "Mark Murray",
  "license": "MIT",
  "repository": "git@github.com:mmmurray/mmm-scripts.git",
  "bin": {
    "mmm": "bin/mmm.js"
  },
  "scripts": {
    "build": "ts-node -P ./tsconfig.lib.json ./src build",
    "dev": "ts-node -P ./tsconfig.lib.json ./src dev",
    "format": "mmm format",
    "jest": "ts-node -P ./tsconfig.lib.json ./src jest",
    "postinstall": "(cd ./node_modules && ln -s .. ./mmm-scripts) || true",
    "release": "ts-node -P ./tsconfig.lib.json ./src release",
    "test": "ts-node -P ./tsconfig.lib.json ./src test",
    "test:compile": "ts-node -P ./tsconfig.lib.json ./src test:compile",
    "test:coverage": "ts-node -P ./tsconfig.lib.json ./src test:coverage",
    "test:lint": "ts-node -P ./tsconfig.lib.json ./src test:lint"
  },
  "dependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.9.0",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-react": "7.9.4",
    "@babel/preset-typescript": "7.9.0",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@hot-loader/react-dom": "16.13.0",
    "@testing-library/jest-dom": "5.3.0",
    "@types/jest": "25.1.4",
    "@types/node": "13.9.5",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "babel-jest": "25.2.3",
    "babel-loader": "8.1.0",
    "chalk": "3.0.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "fs-extra": "9.0.0",
    "glob": "7.1.6",
    "glob-promise": "3.4.0",
    "html-webpack-plugin": "4.0.3",
    "husky": "4.2.3",
    "jest": "25.2.3",
    "jest-watch-typeahead": "0.4.2",
    "prettier": "2.0.2",
    "react-hot-loader": "4.12.20",
    "semantic-release": "17.2.3",
    "start-server-webpack-plugin": "2.2.5",
    "ts-node": "8.8.1",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-bundle-analyzer": "3.6.1",
    "webpack-dev-server": "3.10.3",
    "yargs-parser": "18.1.2"
  },
  "devDependencies": {
    "@types/fs-extra": "8.1.0",
    "@types/html-webpack-plugin": "3.2.2",
    "@types/webpack": "4.41.8",
    "@types/webpack-bundle-analyzer": "2.13.3",
    "@types/webpack-dev-server": "3.10.1"
  }
}
